<div class="container" style="margin-top:100px; margin-bottom:25px; width:60%"  >
    <div class="row" >
        <div class="col-4" >
            <div class="row">
                <a href="/accounts/edit">Edit Profile</a>
            </div>
            <div class="row">
                <a href="/accounts/password/change/">Change Password</a>
            </div>
            <div class="row">
                Privacy
            </div>
        </div>
        <div class="col-8">  
         <form action="/accounts/edit" method="POST">
         <input type="hidden" name="user" value=<%=@you.id%>>
            <div class="container">
               <div class="row">
                    <div class="col-3">
                            <img style="width:100%; border-radius:100%;"  src="<%=@you.profile_img%>"/>
                    </div>
                    <div class="col-9" >
                            <p ><%=@you.username%></p>
                            <p data-target="#uploadModal"
              data-toggle="modal" >Change Profile Photo</p>
                    </div>
               </div>
                    <div class="row">
                        <div class="col-3">
                                First Name
                        </div>
                        <div class="col-9" >
                                <input style="width:100%" value="<%=@you.firstname%>" class="form-control" name="firstname" id="firstname"
                aria-describedby="emailHelp"
                placeholder="First Name"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                                Last Name
                        </div>
                        <div class="col-9" >
                                <input style="width:100%" value="<%=@you.lastname%>"
                                 class="form-control"
                name="lastname"
                id="lastname"
                aria-describedby="emailHelp"
                placeholder="lastname"/>
                                <div style="font-size: .75rem; color: grey">
                                    Help people discover your account by using the name you're known by: either your full name, nickname, or business name.
                                </div>
                        </div>
                    </div>
                 <div class="row">
                    <div class="col-3">
                            Username
                    </div>
                    <div class="col-9" >
                            <input style="width:100%" value="<%=@you.username%>" 
                                            class="form-control"
                name="username" id="username"
                aria-describedby="emailHelp"
                placeholder=" Username"
                />
                    </div>
               </div>
                    <div class="row">
                        <div class="col-3">
                                Bio
                        </div>
                        <div class="col-9" >
                                <input style="width:100%" value="<%=@you.bio%>"
                                                class="form-control"
                name="bio" id="bio"
                aria-describedby="emailHelp"
                placeholder="bio"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                                Email
                        </div>
                        <div class="col-9" >
                                <input style="width:100%" value="<%=@you.email%>" type="email"
                                class="form-control"
                                id="email"
                                name="email"
                                aria-describedby="emailHelp"
                                placeholder="Email"/>
                        </div>
                    </div>
                    <div class="row">
                           <div class="col-3">
                        </div>
                        <div class="col-9" >
                          <button type="submit">Submit</button>
                           <%if @error%>
                            <p style="color:red;"><%=@error%></p>
                        <%end%>
                        </div>
                    </div>
            </div>  
         </form>
        </div>
    </div>
</div>


 <!-- Modal for upload-->
 <div
      class="modal fade "
      id="uploadModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog " role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
              Enter Image address or video url
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form action="/post" method="POST">
          <%if @error%>
          <p style="text-align: center;"><%=@error%></p>
          <%end%>
          <div class="modal-body">
               <label for="Url">Url: </label>
               <input type="text" name="url" id="url"/>
          </div>
          <div class="modal-body">
               <label for="Description">Description: </label>
               <input maxlength = "250" type="text" name="description" id="description"/>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
            <button type="submit" class="btn btn-primary">
              Post Image or Video Url
            </button>
            </form>
          </div>
        </div>
      </div>
    </div>

 <!-- Modal for change profile image -->
 <div
      class="modal fade "
      id="profileModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog " role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
              Change Profile Image
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form action="/user/profile_img" method="POST">
          <%if @error%>
          <p style="text-align: center;"><%=@error%></p>
          <%end%>
          <div class="modal-body">
               <label for="Url">Url: </label>
               <input type="text" name="url" id="url"/>
          </div>

          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
            <button type="submit" class="btn btn-primary">
              Post Image or Video Url
            </button>
            </form>
          </div>
        </div>
      </div>
